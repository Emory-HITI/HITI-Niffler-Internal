[Unit]
Description=mdextractor service
Requires=mongod.service
After=network.target

[Service]
Environment="MONGO_URI=USERNAME:PASSWORD@localhost:27017/"
Type=simple
ExecStart=/opt/localdrive/Niffler/modules/meta-extraction/service/mdextractor.sh
TimeoutStartSec=360
StandardOutput=append:/opt/localdrive/Niffler/modules/meta-extraction/service.log
StandardError=append:/opt/localdrive/Niffler/modules/meta-extraction/service-error.log

[Install]
WantedBy=default.target
